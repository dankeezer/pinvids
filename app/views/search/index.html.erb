<h1>Welcome to PINVIDS</h1>

<%= form_tag search_path, method: "get" do %>
  <p><%= text_field_tag :search, nil, placeholder: "Search Machines, Tournaments ...", class: "form-control" %>
  <p><%= submit_tag "", style: "display: none;" %></p>
<% end %>

<% if @search_results.present? %>
  <h2>Results</h2>
  <ul>
    <% @search_results.each do |result| %>
      <li><%= link_to result.name, result %></li>
    <% end %>
  </ul>
<% end %>
