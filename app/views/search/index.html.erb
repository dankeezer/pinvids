<div class="mt-6">
  <%= form_tag search_path, method: "get" do %>
    <p><%= text_field_tag :query, nil, placeholder: "Search Machines, Tournaments ...", class: "form-control w-full" %>
  <% end %>
</div>

<div class="mt-6">
  <% if @search_results.present? %>
    <h2>All Results</h2>
    <ul class="mt-2">
      <% @search_results.each do |result| %>
        <li><%= link_to result.name, result %></li>
      <% end %>
    </ul>

    <h2 class="mt-8">Machines</h2>
    <ul class="mt-2">
      <% @search_results.each do |result| %>
        <li><%= link_to result.name, result %></li>
      <% end %>
    </ul>

    <h2 class="mt-8">Tournaments</h2>
    <ul class="mt-2">
      <% @search_results.each do |result| %>
        <li><%= link_to result.name, result %></li>
      <% end %>
    </ul>
  <% end %>
</div>