<%= render "layouts/messages" %>

<h1>New Machine</h1>

<%= form_with model: @machine do |form| %>
  <p>Name: <%= form.text_field :name, required: true %></p>
  <p>IPDB ID: <%= form.number_field :ipdb_id %></p>
  <p><%= form.submit "Create" %></p>
<% end %>

<p>
  <%= link_to 'Back', { :action => 'index' } %>
</p>